<section class="pro-component">
    <div class="pro-container">
        <h2 class="pro-title">{{ section.settings.heading }}</h2>
        <p class="pro-sub">{{ section.settings.subtext }}</p>

        <div class="pro-grid">
            {% for block in section.blocks %}
            <div class="pro-card">
                {% if block.settings.image %}
                <img src="{{ block.settings.image | image_url: width: 200 }}" alt="">
                {% endif %}
                <h3 class="">{{ block.settings.title }}</h3>
                <p>{{ block.settings.text }}</p>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
<style>
    .pro-component {
        padding: 60px 20px;
        background: #f8f9fb;
    }

    .pro-container {
        max-width: 1200px;
        margin: auto;
        text-align: center;
    }

    .pro-title {
        font-size: 32px;
        font-weight: 700;
    }

    .pro-sub {
        color: #666;
        margin-bottom: 40px;
    }

    .pro-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
    }

    .pro-card {
        background: white;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, .05);
        transition: .3s;
    }

    .pro-card:hover {
        transform: translateY(-6px);
    }

    .pro-card img {
        width: 60px;
        margin-bottom: 15px;
    }

    .pro-card h3 {
        font-size: 18px;
        margin-bottom: 8px;
    }

    .pro-card p {
        color: #666;
    }
</style>

{% schema %}
{
"name": " Components",
"settings": [
{
"type": "text",
"id": "heading",
"label": "Heading",
"default": "Why Choose Us"
},
{
"type": "textarea",
"id": "subtext",
"label": "Sub Text",
"default": "Our premium features"
}

],
"blocks": [
{
"type": "card",
"name": "Card",

"settings": [
{
"type": "image_picker",
"id": "image",
"label": "Icon"
},
{
"type": "text",
"id": "title",
"label": "Title"
},
{
"type": "textarea",
"id": "text",
"label": "Description"
}
]
}
],
"presets": [
{
"name": " Components"
}
]
}
{% endschema %}