<section class="relative w-full overflow-hidden">

    {% if section.settings.image != blank %}
    <img src="{{ section.settings.image | image_url: width: 2000 }}" alt="{{ section.settings.heading }}"
        class="w-full h-[450px] object-cover">

    {% else %}
    <div class="w-full h-[450px] bg-gray-200">
        <p class="text-center text-gray-500"> {{ 'lifestyle-2' | placeholder_svg_tag: 'w-full h-[400px] bg-gray-200' }}e
        </p>
    </div>
    {% endif %}

    <div class="absolute inset-0 flex items-center bg-black/40">
        <div class="px-6 mx-auto text-white max-w-7xl">

            <h1 class="mb-4 text-4xl font-bold md:text-5xl">
                {{ section.settings.heading }}
            </h1>

            <p class="max-w-xl mb-6 text-lg">
                {{ section.settings.subheading }}
            </p>

            {% if section.settings.button_text != blank %}
            <a href="{{ section.settings.button_link }}"
                class="inline-block px-6 py-3 text-black transition bg-white rounded hover:bg-gray-200">
                {{ section.settings.button_text }}
            </a>
            {% endif %}

        </div>
    </div>

</section>

{% schema %}
{
"name": "Hero Banner",
"settings": [
{
"type": "image_picker",
"id": "image",
"label": "Banner image"
},
{
"type": "text",
"id": "heading",
"label": "Heading",
"default": "Your Main Heading"
},
{
"type": "textarea",
"id": "subheading",
"label": "Subheading",
"default": "Your banner description text here."
},
{
"type": "text",
"id": "button_text",
"label": "Button text",
"default": "Shop Now"
},
{
"type": "url",
"id": "button_link",
"label": "Button link"
}
],
"presets": [
{
"name": "Hero Banner"
}
]
}
{% endschema %}