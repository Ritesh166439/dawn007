<div class="p-4 py-8 bg-red-400 lg:justify-center">
    {% paginate collection.products by section.settings.number_of_product_per_page %}
    <h1 class="text-3xl text-center">{{collection.title}}</h1>
    <div class="max-w-6xl mx-auto">
        <div class="grid items-center grid-cols-1 gap-4 md:grid-cols-4">
            {% for product in collection.products %}
            {% render 'product-cart', product_product: product %}
            {% else %}
            <p>No Product Available</p>
            {% endfor %}
        </div>
    </div>

    {% comment %} {% render 'pagination', pagination: paginate %} {% endcomment %}
    {% endpaginate %}
    <a href="{{routes.collections_url}}"
        class="block my-4 text-base text-center text-gray-500 hover:underline hover:text-gray-800">Go Back To
        Collections</a>
</div>

{% schema %}

{
"name": "Template Collection",
"settings": [
{
"type": "number",
"id": "number_of_product_per_page",
"default": 4,
"label": "Number of products page"
}
]
}
{% endschema %}