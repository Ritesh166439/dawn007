<section class="px-6 py-16 mx-auto max-w-7xl">

    <div class="grid items-center gap-12 md:grid-cols-2">

        <!-- Image -->
        <div class="relative">
            {% if section.settings.image != blank %}
            <img src="{{ section.settings.image | image_url: width: 900 }}"
                class="object-cover w-full shadow-xl rounded-2xl" alt="">
            {% else %}
            {{ 'image' | placeholder_svg_tag }}
            {% endif %}
        </div>

        <!-- Content -->
        <div>
            <h2 class="mb-4 text-4xl font-bold text-gray-900">
                {{ section.settings.heading }}
            </h2>

            <p class="mb-6 text-lg leading-relaxed text-gray-600">
                {{ section.settings.text }}
            </p>

            {% if section.settings.button_link != blank %}
            <a href="{{ section.settings.button_link }}"
                class="inline-block px-8 py-3 font-semibold text-white transition bg-black rounded-full hover:bg-gray-800">
                {{ section.settings.button_text }}
            </a>
            {% endif %}
        </div>

    </div>

</section>

{% schema %}
{
"name": "Image with Text",
"settings": [
{
"type": "image_picker",
"id": "image",
"label": "Image"
},
{
"type": "text",
"id": "heading",
"label": "Heading",
"default": "Premium Quality Products"
},
{
"type": "textarea",
"id": "text",
"label": "Text",
"default": "We provide the best quality products with modern design and comfort."
},
{
"type": "text",
"id": "button_text",
"label": "Button Text",
"default": "Shop Now"
},
{
"type": "url",
"id": "button_link",
"label": "Button Link"
}
],
"presets": [
{
"name": "Image With Text"
}
]
}
{% endschema %}