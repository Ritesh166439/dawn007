<footer class="pt-12 text-gray-300 bg-gray-700">
    <div class="grid grid-cols-1 gap-8 px-6 mx-auto max-w-7xl md:grid-cols-4">


        <div>
            <h2 class="mb-4 text-xl font-semibold text-white">{{ shop.name }}</h2>
            <p class="text-sm leading-relaxed">
                {{ section.settings.about_text }}
            </p>
        </div>

        <div>
            <h3 class="mb-4 font-semibold text-white">Quick Links</h3>
            <ul class="space-y-2">
                {% for link in linklists[section.settings.menu].links %}
                <li>
                    <a href="{{ link.url }}" class="transition hover:text-white">
                        {{ link.title }}
                    </a>
                </li>
                {% endfor %}
            </ul>
        </div>

        <div>
            <h3 class="mb-4 font-semibold text-white">Contact</h3>
            <p class="text-sm"> {{ section.settings.address }}</p>
            <p class="mt-2 text-sm">ðŸ“ž {{ section.settings.phone }}</p>
            <p class="mt-2 text-sm">âœ‰ {{ section.settings.email }}</p>
        </div>

        <div>
            <h3 class="mb-4 font-semibold text-white">Newsletter</h3>
            <form method="post" action="/contact#newsletter">
                <input type="email" name="contact[email]" placeholder="Enter your email"
                    class="w-full px-3 py-2 mb-3 text-white bg-gray-800 rounded focus:outline-none" required>
                <button class="w-full py-2 text-white transition bg-blue-600 rounded hover:bg-blue-700">
                    Subscribe
                </button>
            </form>
        </div>
    </div>

    <div class="py-4 mt-10 text-sm text-center border-t border-gray-700">
        Â© {{ "now" | date: "%Y" }} {{ shop.name }}. All rights reserved.
    </div>
</footer>

{% schema %}
{
"name": "Custom Footer",
"settings": [
{
"type": "textarea",
"id": "about_text",
"label": "About text",
"default": "We provide premium quality products with fast delivery."
},
{
"type": "link_list",
"id": "menu",
"label": "Footer menu"
},
{
"type": "text",
"id": "address",
"label": "Address",
"default": "New Delhi, India"
},
{
"type": "text",
"id": "phone",
"label": "Phone",
"default": "+91 9999999999"
},
{
"type": "text",
"id": "email",
"label": "Email",
"default": "support@store.com"
}
],
"presets": [
{
"name": "Custom Footer"
}
]
}
{% endschema %}