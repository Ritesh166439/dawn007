<section class="max-w-md p-6 mx-auto mt-10 bg-white rounded shadow">

    <h1 class="mb-6 text-2xl font-bold text-center">Create Account</h1>

    {% form 'create_customer' %}

    {% if form.errors %}
    <div class="p-3 mb-4 text-red-600 bg-red-100 rounded">
        {{ form.errors | default_errors }}
    </div>
    {% endif %}

    <div class="mb-4">
        <label>First Name</label>
        <input type="text" name="customer[first_name]" required class="w-full p-2 border rounded">
    </div>

    <div class="mb-4">
        <label>Last Name</label>
        <input type="text" name="customer[last_name]" required class="w-full p-2 border rounded">
    </div>
    <div>
        <label>Contact Number</label>
        <input type="tel" name="customer[phone]" placeholder="+91XXXXXXXXXX" required class="w-full p-2 border rounded">
    </div>

    <div class="mb-4 ">
        <label>Email</label>
        <input type=" email" name="customer[email]" required class="w-full p-2 border rounded">
    </div>

    <div class="mb-4">
        <label>Password</label>
        <input type="password" name="customer[password]" required class="w-full p-2 border rounded">
    </div>

    <button class="w-full p-3 text-white bg-black rounded">
        Create Account
    </button>

    {% endform %}

    <p class="mt-4 text-center">
        Already have account?
        <a href="/account/login" class="text-blue-600">Login</a>
    </p>

</section>