{% if cart.item_count > 0 %}
<div class="items-center justify-center p-4 mx-auto">
    <div class="flex flex-col max-w-6xl my-10 max-auto">
        <div class="flex items-end justify-between my-5 ">
            <h1 class="text-3xl font-bold">Your Cart</h1>
            <a href="{{ routes.all_products_collection_url }}"
                class="font-medium bg-blue-500 border hover:text-blue-800">View Cart</a>
        </div>
    </div>
    <div class="flex flex-col my-10 max-w-8xl max-auto">
        <form action="{{routes.cart_url}}" method="post" novaildate>
            <table class="w-full my-4 divide-y divide-blue-200 table-auto">
                <thead>
                    <th class="px-6 py-3 text-sm font-medium text-left text-black-500">Product</th>
                    <th class="px-6 py-3 text-sm font-medium text-left text-black-500">Quantity</th>
                    <th class="px-6 py-3 text-sm font-medium text-left text-black-500">Total Price</th>
                </thead>
                <tbody>
                    {% for item in cart.items %}
                    <tr class="table-row">
                        <td class="flex flex-row justify-center px-2 py-4">
                            <a href="{{item.url}}">
                                {% if item.image %}
                                <img src="{{item.image | img_url: 'small'}}" alt="{{item.title | escape}}"
                                    class="object-cover w-20 h-20 border">

                                {% else %}
                                {{'product-1' | placeholder_svg_tag: 'w-20 h-20 object-cover border'}}

                                {% endif %}
                            </a>
                        </td>
                        <td class="flex flex-row justify-center px-2 py-4">
                            <a href="{{ item.url}}" class="my-1">{{ item.product.title | truncatewords: 4}}</a>
                            <span class="my-1 text-sm text-gray-500">{{ item.variant.title}}</span>
                            <a href="{{ routes.cart_change_url }}?line={{forloop.index}}&quantity=0"
                                class="my-1 text-sm font-medium text-red-500"> Remove</a>
                        </td>
                        <td class="px-2 py-4">
                            <input type="number" name="updates[{{ item.key }}]" value="{{ item.quantity }}" min="1"
                                class="py-2 text-center border border-gray-500 rounded line ">
                        </td>
                        <td class="px-2 py-4">
                            {{ item.line_price | money}}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            <div class="flex flex-col justify-between md:flex-row item-center">
                <div class="w-full my-4">
                    <div class="flex flex-col item-start">
                        <label for="cart_note">Notes</label>
                        <textarea name="note" id="cart_note"
                            class="w-full h-20 bg-gray-200 border resize border-black-500 md:max-w-lg" cols="30"
                            rows="10"></textarea>
                    </div>
                </div>
                <div class="w-full my-4 md:w-80">
                    {% for block in section.blocks %}
                    {% case block.type %}
                    {% when 'subtotal' %}
                    <h3 class="text-xl">SubTotal: {{ cart.total_price | money }}</h3>

                    {% when 'update_button' %}
                    <div class="my-2">
                        <button type="submit" name="update"
                            class="w-full p-3 bg-blue-100 border hover:bg-blue-500 hover:text-white">Update</button>
                    </div>
                    {% when 'checkout_button' %}
                    <div class="my-2">
                        <button type="submit" name="checkout"
                            class="w-full p-3 bg-blue-100 border hover:bg-blue-500 hover:text-white">Checkout</button>
                    </div>

                    {% else %}

                    {% endcase %}

                    {% endfor %}
                </div>
            </div>
        </form>
    </div>
</div>
{% else %}
<div class="flex justify-center max-w-6xl my-4 max-auto h-60 item-center">
    <div class="text-center">
        <h1 class="my-4 text-3xl">
            Your cart is currently empty.
        </h1>
        <div class="py-4 my-4">
            <a href="{{routes.all_products_collection_url}}"
                class="px-8 py-3 text-white bg-blue-500 border border-blue-500 rounded">Continue
                Shopping</a>
        </div>

    </div>
</div>
{% endif %}

{% schema %}
{
"name": "template Cart",

"blocks": [
{
"type": "subtotal",
"name": "subtotal",
"limit": 1
},
{
"type": "update_button",
"name": "update_button",
"limit": 1
},
{
"type": "checkout_button",
"name": "checkout_button",
"limit": 1
}
]
}
{% endschema %}