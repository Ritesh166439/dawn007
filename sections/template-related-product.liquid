<div class="product-section-wrapper" style="padding: 40px; text-align: center;">
  {% assign product = all_products[section.settings.featured_product] %}

  {% if product != blank %}
  <h2>{{ section.settings.heading }}</h2>
  <img src="{{ product.featured_image | image_url: width: 400 }}" alt="{{ product.title }}">
  <h3>{{ product.title }}</h3>
  <p>{{ product.price | money }}</p>
  <a href="{{ product.url }}" class="button">View Product</a>
  {% else %}
  <p>Please select a product in the theme editor.</p>
  {% endif %}
</div>

{% schema %}
{
"name": "Featured Product Custom",
"settings": [
{
"type": "text",
"id": "heading",
"label": "Section Heading",
"default": "Check out this product"
},
{
"type": "product",
"id": "featured_product",
"label": "Select Product"
}
],
"presets": [
{
"name": "Featured Product Custom"
}
]
}
{% endschema %}