<div class="w-full px-2 py-6">
    <div class="overflow-hidden bg-white border rounded-lg shadow-lg">
        <a href="product_product.url">
            {% if product_product.featured_image %}
            <div class="overflow-hidden">
                <img class="object-cover w-full h-full transition duration-1000 ease-in-out transform hover:scale-100"
                    src="{{ product_product.featured_image | img_url:'medium'}}"
                    alt="{{product_product.featured_image.alt}}">
            </div>
            {% else %}
            {{'product_product-1' | placeholder_svg_tag:'object-cover w-full h-full'}}
            {% endif %}
        </a>
        <div class="flex flex-col p-4">
            <a class="font-medium text-gray-700 uppercase" href="{{product_product.url}}">{{product_product.title}}</a>
            <span class="text-sm">{{product_product.vendor}}</span>
            <p class="text-gray-500">{{product_product.price | money}}</p>
        </div>
    </div>
</div>